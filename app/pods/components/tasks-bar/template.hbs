{{#sortable-group class="sortable-items"
  tagName="div"
  model=model
  onChange="reorderTasks"
  direction="x" as |group|
}}
  {{#each tasks as |item index|}}
    {{#sortable-item
      tagName="div"
      model=item
      group=group
      onDragStart="dragStarted"
      onDragStop="dragStopped"
      handle=".handle"
    }}
      {{tasks-bar-item
        model=item
        index=index
        action=(route-action 'goToTask')
      }}
    {{/sortable-item}}
  {{/each}}
{{/sortable-group}}
