<div class="files-panel-header">
  <div class="flex mb2">
    <div class="flex-auto">
      <div class="as-h2">Files</div>
    </div>

    <button type="button" onclick={{close}}>
      {{inline-svg "assets/images/icons/cross.svg"}}
    </button>
  </div>

  {{yield}}
</div>

<div class="files-panel-main">
  <div class="attachments">
    {{#each sortedAttachments as |attachment|}}
      <div class="attachment">
        {{!-- <button type="button" onclick={{action 'deleteAttachment' attachment}}>
          {{inline-svg "assets/images/icons/cross.svg"}}
        </button> --}}

        <a href={{attachment.fileUrl}} target="_blank" class="attachment-link">
          <div class="attachment-file">
            {{#if attachment.isImage}}
              <img src="{{attachment.thumbUrl}}">
            {{/if}}
          </div>
          
          <div class="attachment-name">
            {{attachment.fileName}}
          </div>
        </a>
      </div>
    {{/each}}
  </div>
</div>
